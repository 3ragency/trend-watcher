generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Platform {
  YOUTUBE
  INSTAGRAM
  TIKTOK

  @@map("platform")
}

model Channel {
  id               String    @id @default(uuid()) @db.Uuid
  userId           String    @db.Uuid @map("user_id")
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform         Platform
  externalId       String    @map("external_id")
  displayName      String?   @map("display_name")
  handle           String?
  url              String?
  avatarUrl        String?   @map("avatar_url")
  subscribersCount BigInt?   @map("subscribers_count")
  totalViewsCount  BigInt?   @map("total_views_count")
  videosCount      Int?      @map("videos_count")
  nextPageToken    String?   @map("next_page_token")
  lastFetchedAt    DateTime? @map("last_fetched_at")
  raw              Json?

  videos           Video[]

  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  @@unique([userId, platform, externalId])
  @@index([userId])
  @@index([userId, platform])
  @@map("channels")
}

model User {
  id           String      @id @default(uuid()) @db.Uuid
  email        String      @unique
  displayName  String?     @map("display_name")
  passwordHash String      @map("password_hash")
  isActive     Boolean     @default(true) @map("is_active")

  channels     Channel[]
  videos       Video[]
  favorites    Favorite[]

  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")

  @@index([isActive])
  @@map("users")
}

model Video {
  id             String    @id @default(uuid()) @db.Uuid
  userId         String    @db.Uuid @map("user_id")
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform       Platform
  externalId     String    @map("external_id")
  url            String
  title          String?
  description    String?
  thumbnailUrl   String?   @map("thumbnail_url")
  publishedAt    DateTime? @map("published_at")

  viewsCount      BigInt?   @map("views_count")
  likesCount      BigInt?   @map("likes_count")
  commentsCount   BigInt?   @map("comments_count")
  durationSeconds Int?      @map("duration_seconds")
  isShort        Boolean   @default(false) @map("is_short")

  raw            Json?

  channelId      String    @db.Uuid @map("channel_id")
  channel        Channel   @relation(fields: [channelId], references: [id], onDelete: Cascade)

  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  @@unique([userId, platform, externalId])
  @@index([userId])
  @@index([channelId])
  @@index([userId, platform])
  @@map("videos")
}

model Favorite {
  id              String   @id @default(uuid()) @db.Uuid
  userId          String   @db.Uuid @map("user_id")
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform        Platform @default(YOUTUBE)
  videoId         String   @map("video_id")
  title           String?
  thumbnailUrl    String?  @map("thumbnail_url")
  channelName     String?  @map("channel_name")
  viewsCount      String?  @map("views_count")
  likesCount      String?  @map("likes_count")
  commentsCount   String?  @map("comments_count")
  durationSeconds Int?     @map("duration_seconds")
  transcript      String?  @db.Text

  createdAt     DateTime @default(now()) @map("created_at")

  @@unique([userId, platform, videoId])
  @@index([userId])
  @@index([userId, platform])
  @@map("favorites")
}
